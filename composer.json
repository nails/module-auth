{
    "name": "nails/module-auth",
    "keywords": [
        "Nails",
        "Shed Collective",
        "CodeIgniter",
        "Auth Module"
    ],
    "homepage": "http://nailsapp.co.uk/modules/auth",
    "description": "This is the \"Auth\" module for Nails.",
    "license": "MIT",
    "authors": [
        {
            "name": "Pablo de la Pena",
            "email": "p@nailsapp.co.uk",
            "homepage": "http://nailsapp.co.uk",
            "role": "Developer"
        },
        {
            "name": "Gary Duncan",
            "email": "g@nailsapp.co.uk",
            "homepage": "http://nailsapp.co.uk",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "hello@nailsapp.co.uk"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "nails/common": "dev-develop",
        "nails/module-cdn": "dev-develop",
        "hybridauth/hybridauth": "~2.10",
        "sonata-project/google-authenticator": "~2.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "7.*"
    },
    "autoload": {
        "psr-4": {
            "Nails\\Auth\\": "src/"
        }
    },
    "extra": {
        "nails": {
            "moduleName": "auth",
            "type": "module",
            "namespace": "Nails\\Auth\\",
            "autoload": {
                "models": [
                    "User",
                    "UserGroup",
                    "UserPassword"
                ],
                "helpers": [
                    "user"
                ]
            },
            "data": {
                "nails/module-admin": {
                    "autoload": {
                        "assets": {
                            "css": [
                                "admin.min.css"
                            ],
                            "js": [
                                "admin.min.js"
                            ]
                        }
                    }
                },
                "nails/module-api": {
                    "namespace": "auth"
                },
                "nails/module-cdn": {
                    "permitted-image-dimensions": [
                        "35x35",
                        "50x50",
                        "65x65",
                        "100x100",
                        "100x125"
                    ]
                }
            }
        }
    }
}
